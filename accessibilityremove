Add-Type -AssemblyName System.Windows.Forms

Write-Host "Press [SPACEBAR] to type `";0600755597?`" globally. Press [ESC] to exit."

# Create COM Object for Sending Keystrokes
$wshell = New-Object -ComObject WScript.Shell

while ($true) {
    # Check if SPACEBAR is pressed
    if ([System.Windows.Forms.Control]::ModifierKeys -eq "Space") {
        Start-Sleep -Milliseconds 100  # Prevent spamming

        # Simulate typing ";0600755597?"
        $wshell.SendKeys(";0600755597?")
    }

    # Check if ESC is pressed to exit
    if ([System.Windows.Forms.Control]::ModifierKeys -eq "Escape") {
        Write-Host "Exiting..."
        break
    }

    Start-Sleep -Milliseconds 50  # Small delay to optimize CPU usage
}
